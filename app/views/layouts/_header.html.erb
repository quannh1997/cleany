<!-- ##### Header Area Start ##### -->
<header class="header-area" style="background:#db4437">
    <!-- Top Header Area -->
    <div class="top-header-area">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-12 col-md-6">

                </div>
                <div class="col-12 col-md-6">
                    <div class="top-meta-data d-flex align-items-center justify-content-end">
                        <!-- Top Social Info -->
                        <div class="top-social-info">
                            <a href="#"><i style="color:white" class="fa fa-facebook"></i></a>
                            <a href="#"><i style="color:white" class="fa fa-twitter"></i></a>
                            <a href="#"><i style="color:white" class="fa fa-youtube-play"></i></a>
                        </div>
                        <!-- Top Search Area -->
                        <!--
                        <div class="top-search-area">
                            <form action="index.html" method="post">
                                <input type="search" name="top-search" id="topSearch" placeholder="Search...">
                                <button type="submit" class="btn"><i class="fa fa-search" aria-hidden="true"></i></button>
                            </form>
                        </div>
                        -->
                        <!-- Login -->
                        <% if logged_in? %>
                            <div class="dropdown">
                                <a class="btn btn-secondary dropdown-toggle" style="color:white" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fa fa-user" aria-hidden="true"></i> <%= current_user.name %>
                                </a>
                              
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                  <a class="dropdown-item" href="<%= user_path(current_user.id) %>">User Profile</a>
                                  <a class="dropdown-item" href="#">Change Password </a>
                                  <%= link_to "Logout", signout_path, method: :delete, class: "dropdown-item" %>
                                  <!-- <a class="dropdown-item" href="<%= signout_path %>">Logout</a> -->
                                </div>
                            </div>
                        <% elsif partner_logged_in? %>
                            <div class="dropdown">
                                <a class="btn btn-secondary dropdown-toggle" style="color:white" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fa fa-reddit-alien" aria-hidden="true"></i> <%= current_partner.name %>
                                </a>
                              
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                  <a class="dropdown-item" href="<%= partner_path(current_partner.id) %>">User Profile</a>
                                  <a class="dropdown-item" href="<%= edit_partner_change_password_path(current_partner.id) %>">Change Password </a>
                                  <%= link_to "Logout", partner_signout_path, method: :delete, class: "dropdown-item" %>
                                  <!-- <a class="dropdown-item" href="<%= signout_path %>">Logout</a> -->
                                </div>
                            </div>    
                        <% else %>
                            <a href="<%= signin_path %>" class="login-btn">Login</a>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Navbar Area -->
    <div class="vizew-main-menu" id="sticker">
        <div class="classy-nav-container breakpoint-off">
            <div class="container">

                <!-- Menu -->
                <nav class="classy-navbar justify-content-between" id="vizewNav">

                    <!-- Nav brand -->
                    <a href="<%= root_path %>" class="nav-brand"><p style="color:white;font-size:-webkit-xxx-large">Cleany</p></a>

                    <!-- Navbar Toggler -->
                    <div class="classy-navbar-toggler">
                        <span class="navbarToggler"><span></span><span></span><span></span></span>
                    </div>

                    <div class="classy-menu">

                        <!-- Close Button -->
                        <div class="classycloseIcon">
                            <div class="cross-wrap"><span class="top"></span><span class="bottom"></span></div>
                        </div>

                        <!-- Nav Start -->
                        <div class="classynav">
                            <ul>
                                <li class="active"><a href="<%= root_path %>">Home</a></li>
                                <% if current_partner %>
                                    <li><a href="<%= partner_working_path %>">Working Part</a></li>
                                <% end %>
                                <% if current_user %>
                                    <li><a href="<%= user_booking_path %>">Booking Part</a></li>
                                <% end %>
                                <%# <li><a href="#">Archives</a></li>
                                <li><a href="#">Features</a></li> %>
                                <li><a href="#">Contact</a></li>
                            </ul>
                        </div>
                        <!-- Nav End -->
                    </div>
                </nav>
            </div>
        </div>
    </div>
</header>
<!-- ##### Header Area End ##### -->